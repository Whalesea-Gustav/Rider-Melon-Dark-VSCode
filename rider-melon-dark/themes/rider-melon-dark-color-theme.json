{
    "$schema": "vscode://schemas/color-theme",
    "name": "Rider Melon Dark (Code)",
    "type": "dark",
    "semanticHighlighting": true,
    "colors": {
        "editor.background": "#262626",
        "editor.foreground": "#A1F6CC",
        "editor.selectionBackground": "#2050b7",
        "editor.inactiveSelectionBackground": "#2050b7",
        "editor.selectionHighlightBackground": "#2050b7",
        "editor.wordHighlightBackground": "#2050b7",
        "editor.wordHighlightStrongBackground": "#2050b7",
        "editor.lineHighlightBackground": "#020d3b",
        "editorWhitespace.foreground": "#686868",
        "editorCursor.foreground": "#ADD3FF",
        "editorLineNumber.foreground": "#666666",
        "editorLineNumber.activeForeground": "#808080",
        "editorIndentGuide.background": "#404040",
        "editorIndentGuide.activeBackground": "#666666",
        "editorBracketMatch.background": "#404040",
        "editorBracketMatch.border": "#666666",
        "editorGutter.addedBackground": "#2C4722",
        "editorGutter.deletedBackground": "#BF3428",
        "editorGutter.modifiedBackground": "#293A5F",
        "editorError.foreground": "#FF5647",
        "editorWarning.foreground": "#D9B72B",
        "editorInfo.foreground": "#6C95EB",
        "editorHint.foreground": "#85C46C",
        "diffEditor.insertedTextBackground": "#29421F80",
        "diffEditor.removedTextBackground": "#42424280",
        "diffEditor.diagonalFill": "#3A3070",
        "editor.findMatchBackground": "#144238",
        "editor.findMatchBorder": "#187057",
        "editor.findMatchHighlightBackground": "#14423880",
        "peekViewEditor.background": "#262626",
        "peekViewResult.background": "#262626",
        "sideBar.background": "#262626",
        "sideBar.foreground": "#BDBDBD",
        "activityBar.background": "#262626",
        "activityBar.foreground": "#BDBDBD",
        "activityBarBadge.background": "#D9B72B",
        "activityBarBadge.foreground": "#262626",
        "tab.activeBackground": "#262626",
        "tab.inactiveBackground": "#232E46",
        "tab.activeForeground": "#A1F6CC",
        "tab.inactiveForeground": "#BDBDBD",
        "statusBar.background": "#262626",
        "statusBar.foreground": "#BDBDBD",
        "panel.background": "#262626",
        "panel.border": "#404040",
        "list.activeSelectionBackground": "#232E46",
        "list.activeSelectionForeground": "#A1F6CC",
        "list.inactiveSelectionBackground": "#303030",
        "list.hoverBackground": "#303030",
        "list.highlightForeground": "#ADD3FF",
        "scrollbarSlider.background": "#88889940",
        "scrollbarSlider.hoverBackground": "#888899C0",
        "scrollbarSlider.activeBackground": "#888899C0",
        "editorInlayHint.background": "#343434",
        "editorInlayHint.foreground": "#787878",
        "editorInlayHint.typeBackground": "#343434",
        "editorInlayHint.typeForeground": "#787878",
        "editorInlayHint.parameterBackground": "#343434",
        "editorInlayHint.parameterForeground": "#787878",
        "terminal.background": "#262626",
        "terminal.foreground": "#BDBDBD",
        "terminal.ansiBlack": "#000000",
        "terminal.ansiRed": "#FF5647",
        "terminal.ansiGreen": "#85C46C",
        "terminal.ansiYellow": "#D9B72B",
        "terminal.ansiBlue": "#6C95EB",
        "terminal.ansiMagenta": "#D688D4",
        "terminal.ansiCyan": "#39CC9B",
        "terminal.ansiWhite": "#F0F0F0",
        "terminal.ansiBrightBlack": "#666666",
        "terminal.ansiBrightRed": "#FF8870",
        "terminal.ansiBrightGreen": "#ADEB96",
        "terminal.ansiBrightYellow": "#F5D86A",
        "terminal.ansiBrightBlue": "#ADD3FF",
        "terminal.ansiBrightMagenta": "#FFBFFE",
        "terminal.ansiBrightCyan": "#7DF0C0",
        "terminal.ansiBrightWhite": "#FFFFFF",
        "badge.background": "#D9B72B",
        "badge.foreground": "#262626",
        "breadcrumb.background": "#262626",
        "breadcrumb.foreground": "#F0F0F0",
        "breadcrumb.focusForeground": "#F0F0F0",
        "breadcrumb.activeSelectionForeground": "#F0F0F0"
    },
    "tokenColors": [
        {
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#5d6e77",
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier",
                "keyword.control",
                "keyword.other",
                "keyword.operator.new",
                "keyword.control.directive"
            ],
            "settings": {
                "foreground": "#6C95EB"
            }
        },
        {
            "scope": [
                "keyword.operator",
                "punctuation.separator",
                "punctuation.accessor",
                "punctuation.terminator"
            ],
            "settings": {
                "foreground": "#BDBDBD"
            }
        },
        {
            "scope": [
                "entity.name.function",
                "meta.function-call entity.name.function",
                "support.function",
                "variable.function"
            ],
            "settings": {
                "foreground": "#c191ff"  // MODIFIED
            }
        },
        {
            "scope": [
                "string",
                "punctuation.definition.string"
            ],
            "settings": {
                "foreground": "#C9A26D"
            }
        },
        {
            "scope": [
                "constant.character.escape",
                "string.regexp constant.character.escape"
            ],
            "settings": {
                "foreground": "#D688D4"
            }
        },
        {
            "scope": [
                "string.regexp",
                "string.regexp constant",
                "string.regexp source"
            ],
            "settings": {
                "foreground": "#FFD49E"
            }
        },
        {
            "scope": [
                "constant.numeric",
                "constant.integer",
                "constant.hex",
                "constant.octal",
                "constant.binary",
                "constant.duration"
            ],
            "settings": {
                "foreground": "#ED94C0"
            }
        },
        {
            "scope": [
                "constant.language",
                "support.constant"
            ],
            "settings": {
                "foreground": "#F0F0F0"
            }
        },
        {
            "scope": [
                "variable.parameter"
            ],
            "settings": {
                "foreground": "#38cb96",
            }
        },
        {
            "scope": [
                "variable.other.readwrite",
                "variable.other",
                "meta.definition.variable"
            ],
            "settings": {
                "foreground": "#aaea95"
            }
        },
        {
            "scope": [
                "entity.name.type",
                "entity.name.class",
                "support.class",
                "support.type",
                "storage.type.class",
                "entity.other.inherited-class",
                "entity.name.type.interface"
            ],
            "settings": {
                "foreground": "#aaea95"
            }
        },
        {
            "scope": [
                "entity.name.namespace",
                "meta.namespace"
            ],
            "settings": {
                "foreground": "#C191FF"
            }
        },
        {
            "scope": [
                "entity.name.enum",
                "variable.other.enummember",
                "constant.enummember"
            ],
            "settings": {
                "foreground": "#E1BFFF"
            }
        },
        {
            "scope": [
                "variable.other.property",
                "meta.property-name",
                "support.variable.property"
            ],
            "settings": {
                "foreground": "#85C46C"
            }
        },
        {
            "scope": [
                "meta.object-literal.key",
                "string.key.json",
                "support.type.property-name.json"
            ],
            "settings": {
                "foreground": "#66C3CC"
            }
        },
        {
            "scope": [
                "entity.name.tag",
                "meta.tag",
                "support.class.component"
            ],
            "settings": {
                "foreground": "#C191FF"
            }
        },
        {
            "scope": [
                "entity.other.attribute-name"
            ],
            "settings": {
                "foreground": "#85C46C"
            }
        },
        {
            "scope": [
                "punctuation.definition.tag"
            ],
            "settings": {
                "foreground": "#BDBDBD"
            }
        },
        {
            "scope": [
                "punctuation",
                "meta.brace",
                "meta.bracket",
                "meta.delimiter",
                "constant.other.symbol"
            ],
            "settings": {
                "foreground": "#BDBDBD"
            }
        },
        {
            "scope": [
                "invalid",
                "invalid.deprecated"
            ],
            "settings": {
                "foreground": "#FFFFFF",
                "background": "#4A2421"
            }
        },
        {
            "scope": [
                "variable.language.self.lua",
                "variable.language.self"
            ],
            "settings": {
                "foreground": "#7a58a5"
            }
        },
        {
             "scope": "variable.parameter.lua",
            "settings": {
                "foreground": "#38cb96"
            }
        }
    ],
    "semanticTokenColors": {
        "variable": "#A1F6CC",
        "parameter": {
            "foreground": "#38cb96",
            "italic": false
        },
        "property": "#85C46C",
        "enumMember": "#E1BFFF",

         "function": "#c191ff",
        "method": "#c191ff",
        "event": "#c191ff",

        "class": "#aaea95",
        "struct": "#aaea95",
        "interface": "#aaea95",
        "type": "#aaea95",
        "namespace": "#aaea95",
        "typeParameter": "#aaea95",
        "string": "#62c0cb",
        "number": "#ED94C0",
        "boolean": "#79efbf",
        "regexp": "#FFD49E",
        "operator": "#BDBDBD",
        "keyword": "#6C95EB",
        "comment": {
            "foreground": "#5d6e77",
            "italic": true
        },

        "[lua]":
        {
            "parameter": {
            "foreground": "#38cb96",
            "italic": false // Set to false to remove italic style
            }
        }
    }
}